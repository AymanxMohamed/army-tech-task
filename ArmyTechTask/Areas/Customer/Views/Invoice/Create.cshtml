@model InvoiceHeaderViewModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Invoice Header</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="InvoiceHeader.CustomerName"></label>
			<input asp-for="InvoiceHeader.CustomerName" class="form-control" />
			<span asp-validation-for="InvoiceHeader.CustomerName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="InvoiceHeader.CashierId"></label>
			<select asp-for="InvoiceHeader.CashierId" asp-items="@Model.CashierList" class="form-select">
				<option disabled selected>--Select Cashier--</option>
			</select>
			<span asp-validation-for="InvoiceHeader.CashierId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="InvoiceDetails.ItemName"></label>
			<input asp-for="InvoiceDetails.ItemName" class="form-control" />
			<span asp-validation-for="InvoiceDetails.ItemName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="InvoiceDetails.ItemCount"></label>
			<input asp-for="InvoiceDetails.ItemCount" class="form-control" />
			<span asp-validation-for="InvoiceDetails.ItemCount" class="text-danger"></span>
		</div>		
		<div class="mb-3">
			<label asp-for="InvoiceDetails.ItemPrice"></label>
			<input asp-for="InvoiceDetails.ItemPrice" class="form-control" />
			<span asp-validation-for="InvoiceDetails.ItemPrice" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
			<a asp-controller="Invoice" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
