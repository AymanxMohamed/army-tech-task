@model InvoiceHeader

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Are you Sure To Delete This Invoice?</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="CustomerName"></label>
			<input asp-for="CustomerName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="CashierId"></label>
			<select asp-for="CashierId" asp-items="@Model.Cashier" class="form-select">
				<option disabled selected>--Select Cashier--</option>
			</select>
			<span asp-validation-for="InvoiceHeader.CashierId" class="text-danger"></span>
		</div>
		<div class="d-flex justify-content-between my-2">
		@foreach (var item in Model.InvoiceDetails)
		{
			<div class="card" style="width: 18rem;">
				<h3 class="card-header">@item.ItemName</h3>
				<div class="card-body">
					<p class="card-text">Item Count: @item.ItemCount</p>
					<p class="card-text">Item Price: @item.ItemPrice $</p>
				</div>
			</div>
		}
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Invoice" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
