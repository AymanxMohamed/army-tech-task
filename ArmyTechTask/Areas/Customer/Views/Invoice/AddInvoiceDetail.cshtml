@model InvoiceDetails

<form method="post">
	<input asp-for="InvoiceHeaderId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Invoice Detail</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="ItemName"></label>
			<input asp-for="ItemName" class="form-control" />
			<span asp-validation-for="ItemName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ItemCount"></label>
			<input asp-for="ItemCount" class="form-control" />
			<span asp-validation-for="ItemCount" class="text-danger"></span>
		</div>		
		<div class="mb-3">
			<label asp-for="ItemPrice"></label>
			<input asp-for="ItemPrice" class="form-control" />
			<span asp-validation-for="ItemPrice" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Invoice" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
