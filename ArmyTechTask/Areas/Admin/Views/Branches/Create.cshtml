@model BranchesViewModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Branch</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Branches.BranchName"></label>
			<input asp-for="Branches.BranchName" class="form-control" />
			<span asp-validation-for="Branches.BranchName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Branches.CityId"></label>
			<select asp-for="Branches.CityId" asp-items="@Model.CitiesList" class="form-select">
				<option disabled selected>--Select City--</option>
			</select>
			<span asp-validation-for="Branches.CityId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Branches" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
