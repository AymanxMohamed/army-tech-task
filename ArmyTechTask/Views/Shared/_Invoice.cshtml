@model InvoiceHeader
@using System.Linq
<td>
    @Model.Id
</td>
<td >
    @Model.CustomerName
</td>
<td >
    @Model.Invoicedate
</td>
<td>
    @Model.Cashier?.CashierName
</td>
<td>
    @Model.Branch?.BranchName
</td>
<td>
    @foreach(var item in Model.InvoiceDetails)
    {
        <p>@item.ItemName</p>
    }
</td>
<td>
    @foreach(var item in Model.InvoiceDetails)
    {
        <p>@item.ItemCount </p>
    }
</td>
<td>
    @foreach(var item in Model.InvoiceDetails)
    {
        <p>@(item.ItemPrice * item.ItemCount)</p>
    }
</td>
<td>
    @Model.InvoiceDetails.Sum(item => item.ItemCount * item.ItemPrice)
</td>
<td width="20%">
    <div class="w-75 btn-group" role="group">
        <a asp-controller="Cashier" asp-action="Edit" asp-route-id="@Model.Id"
        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
        <form asp-action="DeleteCashier" asp-route-id="@Model.Id"
            data-ajax="true" data-ajax-update="#ModalContainer" data-ajax-success="showModal()"
        >
            <button type="submit" class="btn btn-danger mx-2">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
        </form>
    </div>
</td>


           